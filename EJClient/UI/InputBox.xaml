<Window x:Class="EJClient.UI.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" WindowStartupLocation="CenterOwner" Width="500" SizeToContent="Height" ResizeMode="NoResize" Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical">
        <Label x:Name="txtTitle" Margin="5" Content="请输入**"></Label>
        <TextBox x:Name="txtValue" Margin="5" />
        <StackPanel HorizontalAlignment="Right" Margin="5"  Orientation="Horizontal">
            <Button  IsDefault="True" Width="60" Content="确 定" Click="Button_Click_1"></Button>
            <Button Margin="10,0,0,0" Width="60" IsCancel="True" Content="取 消"></Button>
        </StackPanel>
       
    </StackPanel>
</Window>
