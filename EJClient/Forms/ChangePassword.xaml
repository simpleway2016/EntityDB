<Window x:Class="EJClient.Forms.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改密码" WindowStartupLocation="CenterOwner" Height="220" Width="300">
    <StackPanel>
        <Label Content="旧密码"></Label>
        <PasswordBox Margin="10,3,10,3" x:Name="txtOldPwd"></PasswordBox>
        <Label Content="新密码"></Label>
        <PasswordBox Margin="10,3,10,3" x:Name="txtNewPwd"></PasswordBox>
        <Label Content="密码确认"></Label>
        <PasswordBox Margin="10,3,10,3" x:Name="pwdConfirm"></PasswordBox>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Margin="0,3,10,3">
            <Button Content="确 定" IsDefault="True" Width="60" Click="Button_Click_1"></Button>
            <Button Content="取 消" IsCancel="True" Margin="10,0,0,0" Width="60"></Button>
        </StackPanel>
    </StackPanel>
</Window>
