<Window xmlns:Controls="clr-namespace:EJClient.Controls"  x:Class="EJClient.Forms.BugCenter.BugSumbit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sumbit Bug" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="标题：" VerticalAlignment="Center" Grid.Row="0"></Label>
        <TextBox x:Name="txtTitle" Height="28" Margin="50,0,0,0"  Grid.Row="0"   VerticalAlignment="Center"></TextBox>

        <Controls:WayWord x:Name="word" Grid.Row="1"/>
        <Button Content="提 交" Grid.Row="2" Width="60" Click="submitClick" HorizontalAlignment="Right" Margin="0,0,90,0" VerticalAlignment="Center"></Button>
        <Button Content="取 消" Grid.Row="2" Width="60" IsCancel="True" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"></Button>
    </Grid>
</Window>
